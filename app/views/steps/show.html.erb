<% page_title = 'Админка ментора / Просмотр курса / Просмотр урока / Просмотр шага' %>
<% provide :title, page_title %>
<% provide :breadcrumb, page_title  %>
<div class="form-group">
  <%= link_to "Просмотр урока", course_lesson_path(@course, @lesson), class: "btn btn-secondary" %>
  <% if current_user&.is_mentor? %>
  <%= link_to "Редактировать шаг", edit_course_lesson_step_path(@course, @lesson, @step), class: "btn btn-primary" %>
  <% end %>
</div>
<div class="row">
  <div class="col-lg-3">
    <%= show_div_not_blank(Lesson.human_attribute_name(:name), @step.lesson.name) %>
    <%= show_div_not_blank(Lesson.human_attribute_name(:comment_desc), @step.lesson.comment_desc) %>
    <%= show_div_not_blank(Step.human_attribute_name(:name), @step.name) %>
  </div>
  <div class="col-lg-9">
    <%= render 'all_show' %>
  </div>
</div>
