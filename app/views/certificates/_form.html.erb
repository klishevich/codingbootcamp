<div>
  <div class="form-group">
    <%= link_to "Список сертификатов", certificates_path, class: "btn btn-secondary" %>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for(@certificate) do |f| %>
        <div class="form-inputs">
          <%= f.input :student %>
          <%= f.input :course_title %>
          <%= f.input :course_desc, input_html: { rows: 4 } %>
          <%= f.input :mentors %>
          <%= f.input :issue_date %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Сохранить", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
