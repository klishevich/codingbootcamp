<div>
  <div class="form-group">
    <%= link_to "Просмотр курса", my_course_path(@my_course), class: "btn btn-secondary" %>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for([@my_course, @my_lesson]) do |f| %>
        <div class="form-inputs">
          <%= f.association :lesson, collection: Lesson.where(course_id: @my_course.course.id).order(:id), label: MyLesson.human_attribute_name(:lesson_id) %>
          <%= f.input :status, collection: MyLesson.statuses.collect{|item, val| [item.humanize, item]} %>
          <%= f.input :date_start %>
          <%= f.input :date_end %>
          <%= f.input :grade %>
          <%= f.input :comment, input_html: { rows: 2 } %>
          <%= f.input :comment_for_student, input_html: { rows: 2 }, hint: 'не ипользуется' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Сохранить", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
