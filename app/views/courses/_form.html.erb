<div>
  <div class="form-group">
    <%= link_to "Список курсов", courses_path, class: "btn btn-secondary" %>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for(@course) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :code %>
          <%= f.input :video_link %>
          <%= f.input :comment_for_student, hint: 'Например, указать телеграм ментора' %>
          <%= f.input :description %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Сохранить", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
