<div class="bd-sidebar">
  <nav class="bd-links">
    <div class="bd-toc-item">
      <h3>План урока</h3>
      <%= steps_sidebar_menu(@my_course, @my_lesson, @my_steps, @my_step_id) %>
    </div>
  </nav>
  <div class="info-block3 my-lesson-st-show">
    <%= show_div_not_blank(Lesson.human_attribute_name(:name), @my_lesson.lesson.name) %>
    <%= show_div_not_blank(MyLesson.human_attribute_name(:status), @my_lesson.status) %>
    <%= show_div_not_blank(MyLesson.human_attribute_name(:date_start), @my_lesson.date_start&.strftime('%d.%m.%Y')) %>
    <%= show_div_not_blank(Lesson.human_attribute_name(:comment_desc), @my_lesson.lesson.comment_desc) %>
  </div>
  <div class="form-group info-block3">
    <%= link_to "Просмотр курса", st_my_course_path(@my_course), class: "btn btn-primary" %>
  </div>
</div>
