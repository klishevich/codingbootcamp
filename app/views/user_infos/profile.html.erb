<h2><%= t(:my_data) %></h2>

<div class="row">
  <div class="col-lg-6">
    <%= simple_form_for(@user, url: user_infos_path) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, disabled: true, required: false %>
          <%= f.input :full_name, disabled: true, required: false %>
          <%= f.input :city, disabled: true, required: false %>
          <%= f.input :comment, disabled: true, required: false %>
        </div>
    <% end %>
  </div>
</div>
