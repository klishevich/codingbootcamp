<div>
  <div class="form-group">
    <%= link_to "Список пользователей", user_infos_path, class: "btn btn-secondary" %>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for(@user, url: user_info_path(@user), :method => :patch)  do |f| %>
        <div class="form-inputs">
          <%= f.input :email, disabled: true %>
          <%= f.input :last_sign_in_at, disabled: true %>
          <%= f.input :confirmed_at, disabled: true %>
          <%= f.input :created_at, disabled: true %>
          <%= f.input :full_name %>
          <%= f.input :preferred_name %>
          <%= f.input :phone %>
          <%= f.input :city %>
          <%= f.input :comment, input_html: { rows: 6 } %>
          <%= f.input :is_student %>
          <%= f.input :is_mentor %>
          <%= f.input :is_mentor_view %>
          <%= f.input :is_admin %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Сохранить", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
