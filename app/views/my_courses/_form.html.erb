<div>
  <div class="form-group">
    <%= link_to "Список курсов студентов", my_courses_path, class: "btn btn-secondary" %>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for(@course) do |f| %>
        <div class="form-inputs">
          <%= f.association :user, label_method: :full_name, collection: User.where(is_student: true).order(:full_name), label: MyCourse.human_attribute_name(:user_id) %>
          <%= f.association :course, label: MyCourse.human_attribute_name(:course_id) %>
          <%= f.input :status, collection: MyCourse.statuses %>
          <%= f.input :ref %>
          <%= f.input :date_start %>
          <%= f.input :date_end %>
          <%= f.input :grade %>
          <%= f.input :comment %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Сохранить", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
