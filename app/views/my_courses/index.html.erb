<% page_title = 'Админка ментора / Список курсов студентов' %>
<% provide :title, page_title %>
<% provide :breadcrumb, page_title %>
<h2>Список курсов студентов</h2>
<div class="form-group">
    <%= link_to "Создать курс", new_my_course_path, class: "btn btn-primary" %>
  </div>
<div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= MyCourse.human_attribute_name(:id) %></th>
      <th><%= MyCourse.human_attribute_name(:user_id) %></th>
      <th><%= MyCourse.human_attribute_name(:course_id) %></th>
      <th><%= MyCourse.human_attribute_name(:status) %></th>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |u| %>
        <tr>
          <td><%= link_to u.id, my_course_path(u) %></td>
          <td><%= u.user.full_name %></td>
          <td><%= u.course.name %></td>
          <td><%= u.status %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
